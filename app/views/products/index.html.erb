<div class="jumbotron">
  <h1>Ryan's Garage Sale <small>Browse, Buy, or Swap</small></h1>
</div>

<div class="row">
  <% @product.each do |item| %>
    <div class="col-md-3">  
      <div class="thumbnail">
        <div class="image-container">
          
        </div>
        <h3><%= item.name %></h3>
        <p><%= item.description %></p>
        <p><%= item.price %></p>
        <p><%= item.sale_message %></p> 
      </div>          
    </div> 
  <% end %> 
</div>     
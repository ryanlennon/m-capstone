<%= form_tag '/orders', method: :post do %>
<div class="container-fluid">

  <div class="row">
    <div class="change">
    
    <h1>Products</h1>
    <h3>Name: <%= @product.name %></h3>
    <h3>Current price: <%= @product.price %></h3>
    <img src= <%= @product.image.first %> alt="...">
    <h3><%= @product.description %></h3>
    <p> Special: <%= @product.sale_message %></p>

    
    
        <div class="form_group">
            <%= label_tag :quantity %></p>
            <%= text_field_tag :quantity, nil, class: 'form-control', placeholder: "Enter quantity" %>

            <%= label_tag :product_id%></p>
            <%= text_field_tag :product_id, nil, class: 'form-control', placeholder: "Enter The product Id (From the url)" %>
            <div>
                <%= button_tag "Buy Now!", class: 'btn btn-default' %>
            </div>
        </div>
    <% end %>

    <%= link_to "Edit this product", "/products/#{@product.id}/edit" %>
    <%= link_to "Delete this product", "/products/#{@product.id}", method: :delete %>
    <%= link_to "Back to home", "/products" %>

    </div>

  </div>
</div>